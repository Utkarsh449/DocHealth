{
  "name": "DoctorConsultation",
  "type": "object",
  "properties": {
    "patient_id": {
      "type": "string",
      "description": "Reference to patient"
    },
    "patient_name": {
      "type": "string",
      "description": "Patient name"
    },
    "symptom_check_id": {
      "type": "string",
      "description": "Related symptom check if any"
    },
    "description": {
      "type": "string",
      "description": "Reason for consultation"
    },
    "report_urls": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "URLs of uploaded medical reports"
    },
    "preferred_time": {
      "type": "string",
      "description": "Preferred consultation time"
    },
    "consultation_type": {
      "type": "string",
      "enum": ["chat", "call", "video"],
      "description": "Type of consultation requested"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "scheduled", "completed", "cancelled"],
      "default": "pending"
    },
    "scheduled_date": {
      "type": "string",
      "format": "date-time",
      "description": "Scheduled appointment date/time"
    }
  },
  "required": ["patient_id", "patient_name", "description", "consultation_type"]
}

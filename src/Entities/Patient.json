{
  "name": "Patient",
  "type": "object",
  "properties": {
    "patient_id": {
      "type": "string",
      "description": "Unique auto-generated patient ID"
    },
    "full_name": {
      "type": "string",
      "description": "Patient's full name"
    },
    "age": {
      "type": "number",
      "description": "Patient's age"
    },
    "gender": {
      "type": "string",
      "enum": [
        "Male",
        "Female",
        "Other"
      ],
      "description": "Patient's gender"
    },
    "height_cm": {
      "type": "number",
      "description": "Height in centimeters"
    },
    "weight_kg": {
      "type": "number",
      "description": "Weight in kilograms"
    },
    "medical_history": {
      "type": "string",
      "description": "Previous medical conditions, allergies, medications"
    },
    "phone": {
      "type": "string",
      "description": "Contact phone number"
    },
    "email": {
      "type": "string",
      "description": "Contact email"
    },
    "last_accessed": {
      "type": "string",
      "format": "date-time",
      "description": "Last time this patient profile was accessed"
    },
    "last_symptom_check": {
      "type": "string",
      "description": "Brief description of last symptom check"
    }
  },
  "required": [
    "full_name",
    "age",
    "gender"
  ]
}
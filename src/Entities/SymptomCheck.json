{
  "name": "SymptomCheck",
  "type": "object",
  "properties": {
    "patient_id": {
      "type": "string",
      "description": "Reference to patient"
    },
    "patient_name": {
      "type": "string",
      "description": "Patient name for easy reference"
    },
    "symptoms_text": {
      "type": "string",
      "description": "Text description of symptoms"
    },
    "audio_url": {
      "type": "string",
      "description": "URL of uploaded audio description"
    },
    "image_url": {
      "type": "string",
      "description": "URL of uploaded symptom image"
    },
    "ai_diagnosis": {
      "type": "object",
      "description": "AI-generated diagnosis results",
      "properties": {
        "possible_condition": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "home_remedies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "otc_medications": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "urgency_level": {
          "type": "string",
          "enum": ["Immediate", "Today", "Within a Week", "Optional"]
        },
        "urgency_reason": {
          "type": "string"
        }
      }
    },
    "status": {
      "type": "string",
      "enum": ["analyzing", "completed"],
      "default": "analyzing"
    }
  },
  "required": ["patient_id", "patient_name"]
}
